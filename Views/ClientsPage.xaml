<UserControl x:Class="ClientOPreview.Views.ClientsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="8">
            <TextBlock Text="Select windows:"/>
            <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                <Button Content="Refresh" Width="90" Margin="0,0,6,0" Click="OnRefresh"/>
                <Button Content="Open streams" Width="120" Margin="0,0,6,0" Click="OnOpen"/>
                <Button Content="Close selected" Width="100" Margin="0,0,6,0" Click="OnCloseSelected"/>
                <Button Content="Close all" Width="90" Click="OnCloseAll"/>
            </StackPanel>
        </StackPanel>
        <ListBox x:Name="ListWindows" SelectionMode="Extended" DisplayMemberPath="Display" Margin="8"/>
    </DockPanel>
</UserControl>
