<UserControl x:Class="ClientOPreview.Views.ZoomPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Text="Zoom Settings" FontWeight="SemiBold" Margin="10"/>
    <StackPanel Grid.Row="1" Margin="10">
      <CheckBox x:Name="ChkResizeOnHover" Content="Resize window on hover" Checked="OnChanged" Unchecked="OnChanged" Margin="0,0,0,6"/>
      <CheckBox x:Name="ChkInternalZoom" Content="Internal zoom (don't resize window)" Checked="OnChanged" Unchecked="OnChanged" Margin="0,0,0,12"/>

      <TextBlock Text="Magnification Factor:" Margin="0,0,0,4"/>
      <DockPanel Margin="0,0,0,12">
        <TextBlock Text="{Binding Value, ElementName=SliderMagnification, StringFormat={}{0:F1}x}" DockPanel.Dock="Right" Width="40" TextAlignment="Right"/>
        <Slider x:Name="SliderMagnification" Minimum="1.0" Maximum="3.0" TickFrequency="0.1" IsSnapToTickEnabled="True" ValueChanged="OnChanged"/>
      </DockPanel>

      <TextBlock Text="Centering X (Focus):" Margin="0,0,0,4"/>
      <DockPanel Margin="0,0,0,8">
        <TextBlock Text="{Binding Value, ElementName=SliderOffsetX, StringFormat={}{0:P0}}" DockPanel.Dock="Right" Width="40" TextAlignment="Right"/>
        <Slider x:Name="SliderOffsetX" Minimum="0.0" Maximum="1.0" TickFrequency="0.01" ValueChanged="OnChanged"/>
      </DockPanel>

      <TextBlock Text="Centering Y (Focus):" Margin="0,0,0,4"/>
      <DockPanel Margin="0,0,0,8">
        <TextBlock Text="{Binding Value, ElementName=SliderOffsetY, StringFormat={}{0:P0}}" DockPanel.Dock="Right" Width="40" TextAlignment="Right"/>
        <Slider x:Name="SliderOffsetY" Minimum="0.0" Maximum="1.0" TickFrequency="0.01" ValueChanged="OnChanged"/>
      </DockPanel>
      
      <TextBlock Text="Adjust centering to focus on specific parts of the window (e.g. top-left for maps)." 
                 FontSize="11" Foreground="#666" Margin="4,4,0,0" TextWrapping="Wrap"/>
    </StackPanel>
  </Grid>
</UserControl>
