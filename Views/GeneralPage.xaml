<UserControl x:Class="ClientOPreview.Views.GeneralPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Text="General" FontWeight="SemiBold" Margin="10"/>
    <StackPanel Grid.Row="1" Margin="10">
      <CheckBox x:Name="ChkMinimizeToTray" Content="Minimize to System Tray" Checked="OnChanged" Unchecked="OnChanged"/>
      <CheckBox x:Name="ChkTrackLocations" Content="Track client locations" Checked="OnChanged" Unchecked="OnChanged"/>
      <CheckBox x:Name="ChkHideActivePreview" Content="Hide preview of active client" Checked="OnChanged" Unchecked="OnChanged"/>

      <CheckBox x:Name="ChkMinimizeInactive" Content="Minimize inactive clients" Margin="0,6,0,0" Checked="OnChanged" Unchecked="OnChanged"/>
      <CheckBox x:Name="ChkReorderInactive" Content="Send inactive clients to back" Margin="0,6,0,0" IsChecked="True" Checked="OnChanged" Unchecked="OnChanged"/>
      <CheckBox x:Name="ChkTopmost" Content="Previews always on top" Margin="0,6,0,0" IsChecked="True" Checked="OnChanged" Unchecked="OnChanged"/>

      <CheckBox x:Name="ChkHideWhenNotActive" Content="Hide previews when client is not active" Checked="OnChanged" Unchecked="OnChanged"/>
      <CheckBox x:Name="ChkUniqueLayout" Content="Unique layout for each client" Checked="OnChanged" Unchecked="OnChanged"/>
    </StackPanel>
  </Grid>
</UserControl>
