<Window x:Class="ClientOPreview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="client-o-preview" Height="520" Width="820">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!-- Sidebar -->
        <StackPanel Grid.Column="0" Margin="8">
            <Button Content="General" Margin="0,0,0,6" Click="Nav_General"/>
            <Button Content="Thumbnail" Margin="0,0,0,6" Click="Nav_Thumbnail"/>
            <Button Content="Active Clients" Margin="0,0,0,6" Click="Nav_Clients"/>
            <Button Content="About" Margin="0,0,0,6" Click="Nav_About"/>
        </StackPanel>
        <!-- Content area -->
        <Border Grid.Column="1" Margin="8" BorderBrush="#ddd" BorderThickness="1">
            <ContentControl x:Name="ContentHost"/>
        </Border>
    </Grid>
</Window>
