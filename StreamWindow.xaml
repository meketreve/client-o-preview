<Window x:Class="ClientOPreview.StreamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stream" Height="320" Width="520"
        Background="#101010"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
    <DockPanel>
        <Border x:Name="TitleBar" DockPanel.Dock="Top" Background="#202020" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <StackPanel Orientation="Horizontal" Margin="6,4">
                <TextBlock x:Name="TxtTitle" Foreground="#d0d0d0" VerticalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
            </StackPanel>
        </Border>
        <Grid MouseLeftButtonDown="Content_MouseLeftButtonDown" Background="Transparent">
            <!-- O DWM Thumbnail preencherá esta área (janela inteira) -->
        </Grid>
    </DockPanel>
</Window>
