<Window x:Class="ClientOPreview.StreamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stream" Height="320" Width="520"
        Background="#101010"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown" Background="Transparent">
            <TextBlock x:Name="TxtTitle" Foreground="#d0d0d0" VerticalAlignment="Center"/>
        </StackPanel>
        <Grid MouseLeftButtonDown="Content_MouseLeftButtonDown" Background="Transparent">
            <!-- O DWM Thumbnail preencherá esta área (janela inteira) -->
        </Grid>
    </DockPanel>
</Window>
