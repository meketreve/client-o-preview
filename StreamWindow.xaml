<Window x:Class="ClientOPreview.StreamWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Stream" Height="320" Width="520"
        Background="#101010"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="6">
            <CheckBox x:Name="ChkTopmostLocal" Content="Sempre ao topo" Margin="0,0,12,0" Checked="OnTopmostChanged" Unchecked="OnTopmostChanged"/>
            <TextBlock x:Name="TxtTitle" Foreground="#d0d0d0" VerticalAlignment="Center"/>
        </StackPanel>
        <Grid>
            <!-- O DWM Thumbnail preencherá esta área (janela inteira) -->
        </Grid>
    </DockPanel>
</Window>
